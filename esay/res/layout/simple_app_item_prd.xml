<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

	<ImageView android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:id="@+id/img_layer"
    	android:contentDescription="@null"
    	android:background="@drawable/simple_item_layer_selector"
    	/>
	
	<ImageView android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/img_del"
    	android:scaleType="centerInside"
    	android:src="@drawable/simple_item_del"
    	android:contentDescription="@null"
    	android:visibility="invisible"
    	android:layout_gravity="right"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
    	/>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@null"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/img_head"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="14dp"
	        android:layout_marginTop="15dp"
	        android:contentDescription="@null"
	        android:scaleType="centerInside"
	        android:src="@drawable/icon_old" />

	    <TextView
	        android:id="@+id/txt_title"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_alignTop="@+id/img_head"
	        android:layout_marginLeft="16dp"
	        android:layout_toRightOf="@+id/img_head"
	        android:ellipsize="end"
	        android:gravity="center_vertical"
	        android:maxEms="5"
	        android:singleLine="true"
	        android:text="咪咕阅读"
	        android:textColor="@android:color/white"
	        android:textSize="18sp"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/prd_des_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/txt_title"
	        android:layout_below="@+id/img_head"
	        android:layout_marginRight="21dp"
	        android:layout_marginTop="10dp"
	        android:gravity="center"
	        android:text="音乐首发|  无损音质\n百万曲库  | 专属榜单"
	        android:textColor="@android:color/white"
	        android:textSize="10sp" />

	</RelativeLayout>

</FrameLayout>
